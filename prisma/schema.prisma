// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnimalStatus {
  AVAILABLE
  ADOPTED
}

model Animal {
  id           String       @id @unique @default(uuid())
  name         String
  description  String
  image        Bytes
  category     String
  creationDate DateTime     @default(now())
  status       AnimalStatus
}
